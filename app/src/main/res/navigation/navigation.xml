<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home2">

    <fragment
        android:id="@+id/currencies"
        android:name="com.example.currencyapplication.Currencies"
        android:label="fragment_currencies"
        tools:layout="@layout/fragment_currencies" />
    <fragment
        android:id="@+id/home2"
        android:name="com.example.currencyapplication.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home2_to_currencies"
            app:destination="@id/currencies" />
        <action
            android:id="@+id/action_home2_to_liveCurrencyRates"
            app:destination="@id/liveCurrencyRates" />
    </fragment>
    <fragment
        android:id="@+id/liveCurrencyRates"
        android:name="com.example.currencyapplication.LiveCurrencyRates"
        android:label="Live Currency Rates"
        tools:layout="@layout/fragment_live_currency_rates" />
</navigation>